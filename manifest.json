{
  "manifest_version": 3,
  "name": "E2E Test Recorder",
  "version": "1.0.0",
  "description": "Chrome extension for simplified end-to-end testing. Easily record, replay, and manage E2E test scenarios directly in your browser with automated element selection and test generation capabilities.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "E2E Test Recorder"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.css"],
      "matches": ["<all_urls>"]
    }
  ]
}