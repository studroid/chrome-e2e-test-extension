{
  "manifest_version": 3,
  "name": "E2E Test Recorder",
  "version": "1.0.0",
  "description": "Advanced E2E testing with visual regression detection. Record, replay & validate web interactions with smart element targeting, screenshot comparison, and robust error detection for reliable QA automation.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scroll-manager.js", "content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "E2E Test Recorder"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.css"],
      "matches": ["<all_urls>"]
    }
  ]
}